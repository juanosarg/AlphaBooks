<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>ABooks_Headache</defName>
		<label>a huge headache</label>
		<description>All those damned office memos! What do they mean??</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.52, 1, 0.95)</defaultLabelColor>
		<isBad>false</isBad>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
		<comps>
			<li Class="AlphaBooks.HediffCompProperties_DeleteAfterTime">
				<disappearsAfterTicks>60000</disappearsAfterTicks>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
		</comps>
		<stages>
			<li>
				<label>awful</label>
				<minSeverity>0</minSeverity>
				<statOffsets>
					<PainShockThreshold>-0.50</PainShockThreshold>
				</statOffsets>
				
				
			</li>
			<li>
				<label>poor</label>
				<minSeverity>0.1</minSeverity>
				<statOffsets>
					<PainShockThreshold>-0.30</PainShockThreshold>
				</statOffsets>
			</li>
			<li>
				<label>normal</label>
				<minSeverity>0.2</minSeverity>
				<statOffsets>
					<PainShockThreshold>-0.15</PainShockThreshold>
				</statOffsets>
			</li>
			<li>
				<label>good</label>
				<minSeverity>0.3</minSeverity>
				<statOffsets>
					<PainShockThreshold>-0.10</PainShockThreshold>
				</statOffsets>
			</li>
			<li>
				<label>excellent</label>
				<minSeverity>0.4</minSeverity>
				<statOffsets>
					<PainShockThreshold>-0.05</PainShockThreshold>
				</statOffsets>
			</li>
			<li>
				<label>masterwork</label>
				<minSeverity>0.5</minSeverity>
				<statOffsets>
					<PainShockThreshold>-0.02</PainShockThreshold>
				</statOffsets>
			</li>
			<li>
				<label>legendary</label>
				<minSeverity>0.6</minSeverity>
				<statOffsets>
					<PainShockThreshold>-0.01</PainShockThreshold>
				</statOffsets>
			
			</li>
		</stages>
	</HediffDef>
	
</Defs>