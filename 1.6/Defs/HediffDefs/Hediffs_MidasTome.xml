<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>ABooks_MidasTome</defName>
		<label>midas touch</label>
		<description>Reading a Midas tome has given this person the ability to turn all finished crafts and structures into gold.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.52, 1, 0.95)</defaultLabelColor>
		<isBad>false</isBad>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
		<comps>
			<li Class="AlphaBooks.HediffCompProperties_DeleteAfterTime">
				<scaleTicksPerQuality>true</scaleTicksPerQuality>
				<ticksAwful>2500</ticksAwful>
				<ticksPoor>5000</ticksPoor>
				<ticksNormal>10000</ticksNormal>
				<ticksGood>12500</ticksGood>
				<ticksExcellent>18750</ticksExcellent>
				<ticksMasterwork>25000</ticksMasterwork>
				<ticksLegendary>60000</ticksLegendary>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
			
		</comps>
		<stages>
			<li>
				<label>awful</label>
				<minSeverity>0</minSeverity>
				
				
			</li>
			<li>
				<label>poor</label>
				<minSeverity>0.1</minSeverity>
				
			</li>
			<li>
				<label>normal</label>
				<minSeverity>0.2</minSeverity>
				
			</li>
			<li>
				<label>good</label>
				<minSeverity>0.3</minSeverity>
				
			</li>
			<li>
				<label>excellent</label>
				<minSeverity>0.4</minSeverity>
				
			</li>
			<li>
				<label>masterwork</label>
				<minSeverity>0.5</minSeverity>
				
			</li>
			<li>
				<label>legendary</label>
				<minSeverity>0.6</minSeverity>
				
			</li>
		</stages>
	</HediffDef>
</Defs>