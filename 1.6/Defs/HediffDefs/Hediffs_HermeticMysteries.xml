<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>ABooks_HermeticMysteries</defName>
		<label>hermetic insights</label>
		<description>Reading a compendium of hermetic mysteries has given this person the ability to get extra loot from hermetic crates.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.52, 1, 0.95)</defaultLabelColor>
		<isBad>false</isBad>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
		<comps>
			<li Class="AlphaBooks.HediffCompProperties_DeleteAfterTime">
				<scaleTicksPerQuality>true</scaleTicksPerQuality>
				<ticksAwful>30000</ticksAwful>
				<ticksPoor>45000</ticksPoor>
				<ticksNormal>60000</ticksNormal>
				<ticksGood>75000</ticksGood>
				<ticksExcellent>90000</ticksExcellent>
				<ticksMasterwork>110000</ticksMasterwork>
				<ticksLegendary>120000</ticksLegendary>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
			
		</comps>
		<stages>
			<li>
				<label>awful</label>
				<minSeverity>0</minSeverity>
				
				
			</li>
			<li>
				<label>poor</label>
				<minSeverity>0.1</minSeverity>
				
			</li>
			<li>
				<label>normal</label>
				<minSeverity>0.2</minSeverity>
				
			</li>
			<li>
				<label>good</label>
				<minSeverity>0.3</minSeverity>
				
			</li>
			<li>
				<label>excellent</label>
				<minSeverity>0.4</minSeverity>
				
			</li>
			<li>
				<label>masterwork</label>
				<minSeverity>0.5</minSeverity>
				
			</li>
			<li>
				<label>legendary</label>
				<minSeverity>0.6</minSeverity>
				
			</li>
		</stages>
	</HediffDef>
</Defs>