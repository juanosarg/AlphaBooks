<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>ABooks_SurvivalGuide</defName>
		<label>survival expertise</label>
		<description>Reading a survival guide has given this person the ability to thrive in a specific biome. Gives +20ºC to both min and max comfortable temperature range, and +20% Move Speed, Global Work Speed, Hunting Stealth, Tame Animal Chance and Immunity Gain Speed when in the correct biome.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.52, 1, 0.95)</defaultLabelColor>
		<isBad>false</isBad>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
		<comps>
			<li Class="AlphaBooks.HediffCompProperties_DeleteAfterTime">
				<scaleTicksPerQuality>true</scaleTicksPerQuality>
				<ticksAwful>15000</ticksAwful>
				<ticksPoor>30000</ticksPoor>
				<ticksNormal>60000</ticksNormal>
				<ticksGood>90000</ticksGood>
				<ticksExcellent>120000</ticksExcellent>
				<ticksMasterwork>150000</ticksMasterwork>
				<ticksLegendary>180000</ticksLegendary>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
			<li Class="AlphaBooks.HediffCompProperties_AddBiome">
				
			</li>
		</comps>
		<stages>
			<li>
				<label>awful</label>
				<minSeverity>0</minSeverity>
				
				
			</li>
			<li>
				<label>poor</label>
				<minSeverity>0.1</minSeverity>
				
			</li>
			<li>
				<label>normal</label>
				<minSeverity>0.2</minSeverity>
				
			</li>
			<li>
				<label>good</label>
				<minSeverity>0.3</minSeverity>
				
			</li>
			<li>
				<label>excellent</label>
				<minSeverity>0.4</minSeverity>
				
			</li>
			<li>
				<label>masterwork</label>
				<minSeverity>0.5</minSeverity>
				
			</li>
			<li>
				<label>legendary</label>
				<minSeverity>0.6</minSeverity>
				
			</li>
		</stages>
	</HediffDef>
</Defs>